<div class="container">
  <div class="row">
   <div class="col-md-3">
    <h1>会員詳細</h1>
    <div class="p-1 border bg-light">
     <div class="card h-100">
      <div class="text-center">
       <div class="card-img-top"  alt="card-img-top"><%= attachment_image_tag @user, :profile_image, size: '100', fallback: "no_image.jpg", class: "rounded-circle" %></div>
      </div>
      <div class="card-body">
       <p class="card-title">
        会員ID:
        <%= @user.id %><br>
        ユーザーネーム:
        <%= @user.name %><br>
        メールアドレス:
        <%= @user.email %><br>
        会員ステータス:
         <% if @user.is_deleted == true %>
          退会
         <% else %>
          有効
         <% end %>
       </p>
       <p class="card-text">
        <%= link_to "編集する", edit_admin_user_path %>
       </p>
      </div>
     </div>
    </div>
   </div>
   <div class="col-md-auto">
    <h1>ユーザー投稿一覧</h1>
    <div class="row">
     <% @posts.each do |post| %>
      <div class="col-md-auto">
       <div class="p-1 border bg-light">
        <div class="card">
         <div class="img-fluid" alt="card-grid-image">
          <%= attachment_image_tag post, :image, format: 'jpeg', size: '200' %>
         </div>
         <div class="card-body m-auto">
          <h5 class="card-title">
           お出かけ先<br>
           <%= link_to post.title, admin_post_path(post.id)  %>
          </h5>
          <p class="card-text">
           投稿者<br>
           <%= link_to post.user.name, admin_user_path(post.user_id) %>
          </p>
          <p class="card-text"><small class="text-muted"><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></small></p>
         </div>
        </div>
       </div>
      </div>
      <% end %>
    </div>
    <%= paginate @posts %>
   </div>
  </div>
</div>
