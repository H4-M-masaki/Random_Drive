<div class="container">
  <div class="row justify-content-md-center">
   <div class="col-md-auto">
    <h1>ユーザー一覧</h1>
    <table class="table table-hover">
     <thead>
      <tr>
       <th scope="col">会員ID</th>
       <th scope="col">ユーザーネーム</th>
       <th scope="col">メールアドレス</th>
       <th scope="col">会員ステータス</th>
      </tr>
     </thead>
     <% @users.each do |user| %>
      <tbody>
       <tr>
        <td><%= user.id %></td>
        <td>
         <%= link_to admin_user_path(user.id) do %>
          <%= user.name %>
         <% end %>
         </td>
        <td><%= user.email %></td>
        <td>
         <% if user.is_deleted == true %>
          退会
         <% else %>
          有効
         <% end %>
        </td>
       </tr>
      </tbody>
     <% end %>
    </table>
  </div>
 </div>
</div>


