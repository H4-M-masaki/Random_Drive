<div class="container">
 <h1>ユーザー投稿一覧</h1>
  <div class="row row-cols-1 row-cols-sm-4">
   <% @posts.each do |post| %>
   <div class="col-md-auto">
    <div class="card h-100">
     <div class="img-fuid" alt="card-grid-image">
      <%= attachment_image_tag post, :image, format: 'jpeg', size: '300' %>
     </div>
     <div class="card-body m-auto">
      <h5 class="card-title">
       <p>お出かけ先</p>
       <%= link_to post.title, admin_post_path(post.id)  %>
      </h5>
      <p class="card-text">
       投稿者
       <%= link_to post.user.name, admin_user_path(post.user_id) %>
      </p>
      <p class="card-text"><small class="text-muted"><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></small></p>
     </div>
    </div>

   </div>
    <% end %>
  </div>
</div>
<%= paginate @posts %>




