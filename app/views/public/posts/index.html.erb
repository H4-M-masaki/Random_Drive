<h1>投稿一覧</h1>

<h4>タイトル検索</h4>
 <%= form_with url: search_public_posts_path, local: true, method: :get do |form| %>
  <%= form.text_field :keyword %>
  <%= form.submit "検索" %>
 <% end %>





<% @posts.each do |post| %>
 <%= attachment_image_tag post, :image, format: 'jpeg', size: '200' %>
 <h2>お出かけ先</h2>
 <%= link_to post.title, public_post_path(post.id)  %><br>
 <h2>投稿者</h2>
 <%= link_to post.user.name, public_user_path(post.user_id) %><br>
<% end %>
